{
  "name": "qml-formatter",
  "displayName": "QML Formatter",
  "description": "A simple QML formatter",
  "version": "1.1.1",
  "publisher": "AndreOneti",
  "engines": {
    "vscode": "^1.6.0"
  },
  "icon": "images/logo.png",
  "galleryBanner": {
    "color": "#FFFFFF",
    "theme": "light"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:qml"
  ],
  "main": "./out/src/extension",
  "capabilities": {
    "documentFormattingProvider": "true"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AndreOneti/qml-formatter.git"
  },
  "bugs": {
    "url": "https://github.com/AndreOneti/qml-formatter/issues"
  },
  "contributes": {
    "languages": [
      {
        "id": "qml",
        "aliases": ["QML","qml"],
        "filenamePatterns": ["*.qml","*.qmlproject"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "qml",
        "scopeName": "source.qml",
        "path": "./syntaxes/qml.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "qml",
        "path": "./snippets/snippets.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "qml-format configuration",
      "properties": {
        "qmlformat.effectLanguages": {
          "type": "array",
          "default": [
            "qml"
          ],
          "description": "the trigger effect on the language"
        }
      }
    }
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install && tsc"
  },
  "devDependencies": {
    "@types/node": "^13.7.4",
    "typescript": "^3.8.2",
    "vscode": "^1.1.36"
  }
}