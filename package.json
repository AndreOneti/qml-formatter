{
  "name": "qml-formatter",
  "displayName": "QML Formatter",
  "description": "A simple QML formatter",
  "version": "1.0.1",
  "publisher": "AndreOneti",
  "icon": "logo.png",
  "engines": {
    "vscode": "^1.6.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:qml"
  ],
  "main": "./out/src/extension",
  "capabilities": {
    "documentFormattingProvider": "true"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AndreOneti/qml-formatter.git"
  },
  "bugs": {
    "url": "https://github.com/AndreOneti/qml-formatter/issues"
  },
  "contributes": {
    "languages": [
      {
        "id": "qml",
        "aliases": [
          "qml"
        ],
        "filenamePatterns": [
          "*.qml",
          "*.qmlproject"
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "qml-format configuration",
      "properties": {
        "qmlformat.effectLanguages": {
          "type": "array",
          "default": [
            "qml"
          ],
          "description": "the trigger effect on the language"
        }
      }
    }
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install && tsc"
  },
  "devDependencies": {
    "@types/node": "^13.7.4",
    "typescript": "^3.8.2",
    "vscode": "^1.1.36"
  }
}