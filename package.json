{
  "name": "qml-formatter",
  "displayName": "QML Formatter",
  "description": "A simple QML formatter",
	"author": "AndreOneti",
	"license": "MIT",
  "version": "1.1.11",
  "publisher": "AndreOneti",
  "engines": {
    "vscode": "^1.6.0"
  },
  "icon": "images/logo.png",
  "galleryBanner": {
    "color": "#313191",
    "theme": "dark"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:qml"
  ],
  "main": "./client/out/extension",
  "capabilities": {
    "documentFormattingProvider": "true"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AndreOneti/qml-formatter.git"
  },
  "bugs": {
    "url": "https://github.com/AndreOneti/qml-formatter/issues"
  },
  "contributes": {
    "languages": [
      {
        "id": "qml",
        "aliases": ["QML","qml"],
        "filenamePatterns": ["*.qml","*.qmlproject"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "qml",
        "scopeName": "source.qml",
        "path": "./syntaxes/qml.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "qml",
        "path": "./snippets/snippets.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "qml-format configuration",
      "properties": {
        "qmlformat.effectLanguages": {
          "type": "array",
          "default": [
            "qml"
          ],
          "description": "the trigger effect on the language"
        },
				"qmlLanguageServer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
      }
    }
  },
  "scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
  },
  "devDependencies": {
		"@types/mocha": "^8.2.2",
		"@types/node": "^12.12.0",
		"@typescript-eslint/eslint-plugin": "^4.23.0",
		"@typescript-eslint/parser": "^4.23.0",
		"eslint": "^7.26.0",
		"mocha": "^8.3.2",
		"typescript": "^4.4.3"
  }
}